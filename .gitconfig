[blame]
  showEmail = true
[diff]
  mnemonicprefix = true
  renames = copies
  context = 2
  compactionHeuristic = true
[push]
  default = current
[status]
  showUntrackedFiles = all
[alias]
  hobnail = push --force
  pluff = pull --ff-only
  meffe = merge --ff-only
  liph = log --graph --branches --format='%C(auto)%h%d %G? %C(cyan)%an%C(reset) %s'
  aleph = log --graph --all --format='%C(auto)%h%d %G? %C(cyan)%an%C(reset) %s'
  brout = checkout -b
  caff = diff --cached
  heff = diff HEAD
[rerere]
  enabled = true
[instaweb]
  httpd = webrick
  browser = chromium
